<%- include('./layouts/admin_header.ejs')%>
<script src="/assets/js/categories.js"></script>
<script src="/assets/vendors/template/template.js"></script>
<div class="container-fluid">
  <div class="page-title">
    <h1>分类目录</h1>
  </div>
  <!-- 有信息时展示 -->
  <div class="alert alert-danger alert-add" style="display: none;width: 180px;">
    <strong>提示：</strong><span>发生XXX错误</span>
  </div>
  <div class="row">
    <div class="col-md-4">
      <form>
        <input type="hidden" name="id" id='id'>
        <h2>添加新分类目录</h2>
        <div class="form-group">
          <label for="name">名称</label>
          <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
        </div>
        <div class="form-group">
          <label for="slug">别名</label>
          <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-add btn-save" type="button">添加</button>
        </div>
      </form>
    </div>

    <div class="col-md-8">
        <!-- 有信息时展示 -->
  <div class="alert alert-danger alert-del" style="display: none;width: 180px;">
    <strong>提示：</strong><span>发生XXX错误</span>
  </div>
      <div class="page-action">
        <!-- show when multiple checked -->
        <a class="btn btn-danger btn-sm btn-dels" href="javascript:;" style="display: none">批量删除</a>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" width="40"><input type="checkbox" class="chkAll"></th>
            <th>名称</th>
            <th>Slug</th>
            <th class="text-center" width="100">操作</th>
          </tr>
        </thead>
        <tbody>
          <script type="text/template" id="cateTempList">
            {{each data}}
            <tr>
              <td class="text-center"><input type="checkbox" class="chkOne" data-id={{$value.id}}></td>
                <td>{{$value.name}}</td>
                <td>{{$value.slug}}</td>
                <td class="text-center">
                  <a href="javascript:;" class="btn btn-info btn-xs btn-edit" data-name='{{$value.name}}' data-slug='{{$value.slug}}' data-id='{{$value.id}}'>编辑</a>
                  <a href="javascript:;" class="btn btn-danger btn-xs btn-del" data-id={{$value.id}}>删除</a>
                </td>
              </tr>
              {{/each}}
          </script>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
<%- include('./layouts/admin_footer.ejs')%>